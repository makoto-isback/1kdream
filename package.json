{
  "name": "adream",
  "version": "1.0.0",
  "description": "ADream - Telegram Mini App Lottery",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:frontend": "cd apps/frontend-miniapp && npm run dev",
    "dev:backend": "cd apps/backend-api && npm run start:dev",
    "dev:admin": "cd apps/admin-panel && npm run dev",
    "build:frontend": "cd apps/frontend-miniapp && npm run build",
    "build:backend": "cd apps/backend-api && npm run build",
    "build:admin": "cd apps/admin-panel && npm run build",
    "install:all": "npm install && cd apps/frontend-miniapp && npm install && cd ../backend-api && npm install"
  }
}
